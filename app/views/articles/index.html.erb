<% provide(:title, 'News Archive') %>
<h1>Articles</h1>

<%= will_paginate %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="table-responsive">
      <table class="table table-striped">
        
        <% @articles.each do |article| %>
          <tr>
            <td><%= link_to article.title, article %> <small><%= article.pubdate %></small></td>
            <td><div class="btn-group btn-group-xs" role="toolbar" aria-label="..."><% if current_user.email? %>
            <%= link_to "delete", article, method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class:"btn btn-default" %><% end %></div></td>
          </tr>
        <% end %>
      </table>
    </div>
    <%= will_paginate %>
  </div>
</div>