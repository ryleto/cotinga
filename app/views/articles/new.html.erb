<% provide(:title, 'New Article') %>
<h1>New Article</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@article) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :pubdate %>
      <%= f.date_field :pubdate, class: 'form-control' %>
      
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      
      <%= f.label :body %>
      <%= f.text_area :body, size: "25x15", class: 'form-control' %>
      
      <%= f.label :source %>
      <%= f.text_field :source, class: 'form-control' %>
      
      <%= f.label :publish %>
      <%= f.check_box :publish, class: 'form-control' %>
      <br>
      <%= f.label :tag_list, "Tags (separated by commas)", class: 'form-control' %>
      <%= f.text_field :tag_list %>
      <br><br>
      <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
    <br>
    <%= link_to "Cancel", :back, class: "btn btn-default" %>
    <br><br>
  </div>
</div>