<% provide(:title, 'Contact') %>
<h1>Contact Us</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @message, url: contact_path do |message_form| %>
      <fieldset>
        <div class="field">
          <%= message_form.text_field :name, placeholder: "Name" %>
        </div>
        
        <div class="field">
          <%= message_form.email_field :email, placeholder: "Email"%>
        </div>
        
        <%= message_form.label :email %>
        <%= message_form.email_field :email, placeholder: "email address", class: 'form-control' %>
        
        <div class="field">
          <%= message_form.text_area :content, placeholder: "Message"%>
        </div>
      </fieldset>
      
      <fieldset>
        <div class="field">
          <%= message_form.submit "Send", class: "btn btn-primary" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>