<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3>Manage Users <small>(<%= User.count %> registered)</small></h3>
    <%= will_paginate %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <th>User</th>
          <th>Email</th>
          <th>Logins</th>
          <th>Last Activity</th>
          <th>Role</th>
          <th>Action</th>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <%= render user %>
          </tr>
        <% end %>
      </table>
    </div>
    <%= will_paginate %>
    <%= button_to "new user", new_user_registration_path, class:"btn btn-primary", :method => :get %><br>
  </div>
</div>